# docker
clean_docker(){
  docker rm -vf $(docker ps -aq) # delete all containers
  docker rmi -f $(docker images -aq) # delete all images
  docker system prune --volumes --all -f # delete all volumes
}
power_docker(){
  clean_docker; docker-compose up -d;
}
power_lazy_docker(){
  clean_docker; docker-compose up -d; lazydocker;
}

#find
find_newest_files(){
  # $1 directory
  # $2 number of files to find
  find $1 -type f -printf "%T@ %p\n" | sort -n | cut -d' ' -f 2- | tail -n $2 | tac
}
